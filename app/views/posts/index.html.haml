.d-flex.flex-column.align-items-center.mt-3
  .col-xl-7.col-lg-8.col-md-10.col-sm-11.post-card
    .card
      .card-header Create Post
      .card-body
        = form_for @post, html: { multipart: true, class: 'dropzone upload-images p-0 border-0' } do |f|
          .form-group.row.mt-2
            .col-auto.pr-0
              = image_tag avatar_url(current_user), class: 'post-author-icon'
            .col.pl-1
              = f.text_field :content, class: 'form-control border-0', placeholder: 'Say something about this...'
          .fallback
            = file_field_tag 'images[]', type: :file, multiple: true
          .dz-message.m-0
          .dropzone-previews.mb-3
            .upload-photos-icon
              %i.fa.fa-plus.fa-2x{ aria_hidden: true, style: 'color: #dddfe2' }
          = f.submit 'Post', class: 'btn btn-primary'

    #posts= render 'posts_list'
  %br
  = will_paginate @posts