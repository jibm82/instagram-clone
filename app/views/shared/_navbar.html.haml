%nav.navbar.navbar-expand-lg.navbar-light
  .container
    = link_to 'Icon', root_path, class: 'navbar-brand core-sprite hide-text'
    %button.navbar-toggler{ type: :button,
      data: { target: '#navbarSupportedContent' },
      aria: { controls: :navbarSupportedContent, expanded: :false, label: 'Toggle navigation' } }
      %span.navbar-toggler-icon

    #navbarSupportedContent.collapse.navbar-collapse
      = form_tag users_path, method: :get, remote: :true, class: 'form-inline my-2 my-lg-0 ml-md-auto', id: 'users-search' do
        = text_field_tag :term, params[:term], class: 'form-control mr-sm-2 text-center common-btn',
          placeholder: 'Search', autocomplete: :off
        #users-result

      %ul.navbar-nav.ml-md-auto
        %li.nav-item
          %a.nav-link.core-sprite.explore-icon.hide-text{ href: '#' } Explore
        %li.nav-item
          %a.nav-link.core-sprite.notification-icon.hide-text{ href: '#' } Notification
        %li.nav-item
          = link_to 'Profile', user_path(current_user), class: 'nav-link core-sprite profile-icon hide-text'